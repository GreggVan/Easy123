<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>EZAccess</servlet-name>
        <servlet-class>org.ez.view.EZAccessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>org.ez.view.ChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EZAccess</servlet-name>
        <url-pattern>/ezaccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EZAccess</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EZAccess</servlet-name>
        <url-pattern>/assistant/*</url-pattern>
    </servlet-mapping>
    <!-- default servlet mapping. this maps static content as well
	<servlet-mapping>
		<servlet-name>EZAccess</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	 -->
    <servlet>
        <servlet-name>Email</servlet-name>
        <servlet-class>org.ez.view.EmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Email</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileManager</servlet-name>
        <servlet-class>org.ez.view.FileManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileManager</servlet-name>
        <url-pattern>/file</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Account</servlet-name>
        <servlet-class>org.ez.view.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Albums</servlet-name>
        <servlet-class>org.ez.view.AlbumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Albums</servlet-name>
        <url-pattern>/albums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
